#!/bin/zsh

ffmpeg -f image2 -i GP_het_plot_GP1_%d.png -vf scale=900:-1:sws_dither=ed,palettegen palette.png

ffmpeg -f image2 -framerate 1.2 -i GP_het_plot_GP1_%d.png video.flv

ffmpeg -i video.flv -i palette.png -filter_complex "fps=1.2,scale=900:-1:flags=lanczos[x];[x][1:v]paletteuse" GP1_new.gif

ffmpeg -f image2 -i GP_het_plot_GP2_%d.png -vf scale=900:-1:sws_dither=ed,palettegen palette.png

ffmpeg -f image2 -framerate 1.2 -i GP_het_plot_GP2_%d.png video.flv

ffmpeg -i video.flv -i palette.png -filter_complex "fps=1.2,scale=900:-1:flags=lanczos[x];[x][1:v]paletteuse" GP2_new.gif

